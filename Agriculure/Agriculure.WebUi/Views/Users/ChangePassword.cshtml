@model Agriculure.WebUi.ViewModel.UserVM
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bannerDiv"><ul><li><a href="/Home">Home</a></li>/<li>Change Password</li></ul></div>
<section class="FormSection" id="AddOfferForm">
    <div class="Registration">
        @if (ViewBag.NotMatching != null)
        {
            <div class="alert alert-danger">@ViewBag.NotMatching</div>
        }
        @if (ViewBag.WrongOldPass != null)
        {
            <div class="alert alert-danger">@ViewBag.WrongOldPass</div>
        }
        @if (ViewBag.somethingwentwrong != null)
        {
            <div class="alert alert-danger">@ViewBag.somethingwentwrong</div>
        }
        <div class="row">
            @using (Html.BeginForm("ChangePassword", "Users", FormMethod.Post, new { @class = "RegisterForm col-md-12 col-lg-12 col-12" }))
            {
                @Html.AntiForgeryToken()
                <h4>Change Password</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <input value="@ViewBag.Id" name="ID" type="hidden" />
                <div class="form-group">
                    <label class="control-label col-md-12">Old Password</label>
                    <div class="col-md-10">
                        <input class="form-control" name="oldPass" type="text" required />
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-12" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-12">Confirm New Password</label>
                    <div class="col-md-10">
                        <input class="form-control" name="confirmPass" type="text" required />
                    </div>
                </div>
                <div class="form-group col-md-6 col-lg-6 col-12 pull-left">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" required />
                    </div>
                </div>
            }
        </div>
    </div>
</section>
