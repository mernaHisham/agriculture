@{
    ViewBag.Title = "Registration";
}
    <section class="FormSection" id="AddOfferForm">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-lg-6 col-12">
                    <form class="loginForm" action="/Home/Login" method="post">
                        <div class="form-group col-12">
                            <input class="form-control" type="text" name="Email" placeholder="Username" />
                        </div>
                        <div class="form-group col-12">
                            <input class="form-control" type="password" name="Password" placeholder="Password" />
                        </div>
                        <div class="form-group col-12">
                            <a href="#" class="forgetPassLink">Forget Your password ?</a>
                        </div>
                        <div class="form-group col-12">
                            <input class="btn btn-block" type="submit" value="Login" />
                        </div>
                        <span>Not a member ? <a href="/Home/register">Create an account</a></span>
                    </form>
                </div>
                <div class="col-md-6 col-lg-6 col-12">
                    <form class="traceForm">
                        <div class="form-group col-12">
                            <h3>Enter Product ID to Trace Your Product : </h3>
                        </div>
                        <div class="form-group col-12">
                            <input class="form-control" type="text" placeholder="eg : 123 456 789207" />
                        </div>
                        <div class="form-group col-12">
                            <input class="btn btn-block" type="submit" value="Trace The Product" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </section>